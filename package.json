{
  "name": "usb-device",
  "displayName": "usb-devices tool",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./root/extension.js",
  "contributes": {
    "configuration": {
      "title": "xbit configuration",
      "type": "object",
      "properties": {
        "xbit-vsc.python-venv": {
          "type": "string",
          "default": "",
          "description": "Specifies the path to the python virtual env to install required tools."
        }
      }
    },
    "languages": [
      {
        "id": "hex",
        "extensions": [
          ".hex"
        ],
        "aliases": [
          "Binary"
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xbit-devices",
          "title": "xbit",
          "icon": "resources/dark/usb-device.svg"
        }
      ]
    },
    "views": {
      "xbit-devices": [
        {
          "id": "usbDevices",
          "name": "USB devices",
          "icon": "resources/dark/usb-device.svg",
          "contextualTitle": "USB Devices"
        },
        {
          "id": "usbDevice.optionsView",
          "name": "Selected Device",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "usbDevices.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "usbDevices.openDeviceFile",
        "title": "Open File"
      },
      {
        "command": "usbDevices.deleteDeviceFile",
        "title": "Delete File",
        "icon": "$(trash)"
      },
      {
        "command": "usbDevices.renameDeviceFile",
        "title": "Rename File",
        "icon": "$(edit)"
      },
      {
        "command": "usbDevices.createDeviceFile",
        "title": "Create File",
        "icon": "$(add)"
      },
      {
        "command": "usbDevices.writeHexFile",
        "title": "Write Hex File"
      },
      {
        "command": "usbDevices.connectUsbDevice",
        "title": "Connect"
      },
      {
        "command": "usbDevices.disconnectUsbDevice",
        "title": "Disconnect"
      },
      {
        "command": "usbDevices.createTerminal",
        "title": "Extension Terminal: Create"
      },
      {
        "command": "usbDevices.clearTerminal",
        "title": "Extension Terminal: Clear"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "usbDevices.refreshEntry",
          "when": "view == usbDevices",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "usbDevices.writeHexFile",
          "when": "resourceLangId == hex"
        }
      ],
      "view/item/context": [
        {
          "command": "usbDevices.connectUsbDevice",
          "when": "viewItem == usbDevice",
          "group": "inline"
        },
        {
          "command": "usbDevices.disconnectUsbDevice",
          "when": "viewItem == usbDeviceConnected",
          "group": "inline"
        },
        {
          "command": "usbDevices.createDeviceFile",
          "when": "viewItem == usbDevice || viewItem == usbDeviceConnected"
        },
        {
          "command": "usbDevices.deleteDeviceFile",
          "when": "viewItem == usbDeviceFile"
        },
        {
          "command": "usbDevices.renameDeviceFile",
          "when": "viewItem == usbDeviceFile"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.19.0",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "standard": "^17.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "async": "^3.2.4",
    "serialport": "^11.0.0"
  }
}
